                    <p class="playerName">Amjad</p>
                    <p>Keeper of the Month</p>
                    <p class="playerTag">The Four Handed Keeper</p>
                </div>
            </div>
        </div>

        <div class="search">
            <input type="text" name="searchProfile" id="searchProfile"
                placeholder="Filter by Name, Player Tag and Favourite Club" autocomplete="off">
        </div>
        <div class="profilesContainer">
            <% db.forEach(profile=> { %>
                <a href="/players/<%= profile.name %>">
                    <div class="profile">
                        <img src="" alt="">
                        <div class="profileDetails">
                            <div class="profileDetailsinner">
                                <p>Name:</p>
                                <p>
                                    <%= profile.name %>
                                </p>
                            </div>
                            <div class="profileDetailsinner">
                                <p>Player Tag:</p>
                                <p>
                                    <%= profile.playerTag %>
                                </p>
                            </div>
                            <div class="profileDetailsinner">
                                <p>Gender:</p>
                                <p>
                                    <%= profile.gender %>
                                </p>
                            </div>
                            <div class="profileDetailsinner">
                                <p>Favourite Club:</p>
                                <p>
                                    <%= profile.favClub %>
                                </p>
                            </div>
                            <div class="profileDetailsinner">
                                <p>Jersey Number:</p>
                                <p>
                                    <%= profile.preferredJerseyNumber %>
                                </p>
                            </div>
                            <div class="profileDetailsinner">
                                <p>Rating:</p>
                                <p>
                                    <%= profile.playerStats.rating %>
                                </p>
                            </div>
                        </div>
                    </div>
                </a>
                <% }) %>
        </div>
        <div class="matchNotFound">
            No Player Found
        </div>
    </div>

